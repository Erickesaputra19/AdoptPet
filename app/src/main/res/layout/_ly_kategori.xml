<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Kategori"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Liat Semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.petadoptmobile.Atas.Wrap_element
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.petadoptmobile.Atas.Card_element
                android:backgroundTint="#9933FF"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_anjing"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_dog"
                    android:tint="@color/white" />
            </com.example.petadoptmobile.Atas.Card_element>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="Anjing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.example.petadoptmobile.Atas.Wrap_element>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.petadoptmobile.Atas.Wrap_element
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.petadoptmobile.Atas.Card_element
                android:backgroundTint="#FF66B2"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_kucing"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_cat"
                    android:tint="@color/white" />
            </com.example.petadoptmobile.Atas.Card_element>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="Kucing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.example.petadoptmobile.Atas.Wrap_element>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.petadoptmobile.Atas.Wrap_element
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.petadoptmobile.Atas.Card_element
                android:backgroundTint="#66FFFF"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_burung"
                    android:tint="@color/white"
                    android:background="@drawable/ic_bird"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </com.example.petadoptmobile.Atas.Card_element>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="Burung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.example.petadoptmobile.Atas.Wrap_element>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <com.example.petadoptmobile.Atas.Wrap_element
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.petadoptmobile.Atas.Card_element
                android:backgroundTint="#B266FF"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_ikan"
                    android:tint="@color/white"
                    android:background="@drawable/ic_fish"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </com.example.petadoptmobile.Atas.Card_element>
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="Ikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.example.petadoptmobile.Atas.Wrap_element>
        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>